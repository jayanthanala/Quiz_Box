<div class="container">
      <div class="row">
        <div class="col-md-12">
          <h5 class="text-center"> Number of students added : <%=students.length%></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
           <h5>Add Students By entering their Roll Number:</h5>
           <form class="" action="/te/exam/<%=id%>/students" method="post">
              <div class="form-group">
                <input type="text" name="student" class="form-control" placeholder="Student Roll Number" id="s">
              </div>
          <div class="form-group">
              <button class="btn btn-outline-success" >Submit</button>
          </div>
           </form>
        </div>
      <div class="col-md-6">
        <h5>Share the given accesscode</h5>
        <div >
           <input type="text"  value="<%=access%>" id="copy"> <span id="share"><i class="far fa-copy"></span></i>
        </div>
    </div>
  </div>
  <h2>Students</h2>
  <div class="container mx-5 px-3">
    <div class="row">
      Roll Numbers
    </div>
    <% for(var i=0;i<=students.length-1;i++){ %>
      <div class="row">
        <div class="col-md-6">
          <%=i+1%>
        </div>
        <div class="colmd-6">
          <%=students[i]%>
        </div>
      </div>
      <hr>
   <%  }%>
  </div>
  <div class="row">
    <div class="col-md-12">
      Remove Any Student From the List
      <form class="" action="/te/exam/<%=id%>/students?_method=DELETE" method="POST">
         <div class="form-group">
           <input type="text" name="student" class="form-control" placeholder="Student Roll Number" id="s">
         </div>
     <div class="form-group">
         <button class="btn btn-outline-success" >Submit</button>
     </div>
      </form>
    </div>
  </div>
</div>















