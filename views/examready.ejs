<%if(exams[0]){%>
  <div class="container px-5">
    <div class="container px-5">
      <% for(var i=0;i<=exams.length-1;i++){%>
      <div class="row my-5 py-3 border">
        <div class="col-md-12">
          <h4 class="">Title: <%=exams[i].title%></h4>
        </div>
        <div class="col-md-12">
          <h6 class="">  Number of questions: <%=exams[i].noquestions%></h6>
        </div>
        <div class="col-md-12">
          Total marks: <%=exams[i].marks%>
        </div>
        <div class="col-md-12 d-flex justify-content-around">
            <a href="/te/exam/<%=exams[i]._id%>/students" class="btn btn-outline-primary">Students List</a>
            <form style="border:0px" action="<%=exams[i]._id%>/ready" method="post">
            <button class="btn btn-outline-success">Start</button>  <!-- after clicking start only the students should get examid = this exam id -->
          </form>
        </div>
      </div>
    <%}%>
    </div>
  </div>

<%}else{%>
  <h2>NO EXAMS WHICH ARE READY!!</h2>
<%}%>



