<%- include("./partials/teheader.ejs") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<link rel="stylesheet" href="/stylesheets/newexam.css">
 </head>
<body>
<div class="continer-fluid">
  <div class="row">
    <div class="col-md-2 fixed">
    <div class="sticky-top">
      <h4>Total number of questions: <span id="qno">0</span></h4>
      <h4>Total number of marks: <span id="marks">0</span></h4>
    </div>
    </div>
    <div class="col-md-10" class="main">
        <form class="" action="/te/exam/new" method="post">
          <div class="continer px-5">
            <div class="row px-5">
              <div class="input-field col s12">
                <input type="text" name="title" class="validate" id="title">
                <label for="title">Title of the quiz</label>
              </div>
            </div>
          </div>
          <div id=cf>
            <div class="container">
              <div class="row">
                <div class="col m10">
                  <div class="row d-flex justify-content-end">
                        <label class="mr-2">MCQ</label>
                        <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input mr-3 cs" id="cs0">
                        <label class="custom-control-label" for="cs0">FILE UPLOAD</label>
                        </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <input id="q0" type="text" class="validate" name="questions[0][q]" required>
                       <label for="q0">Question</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s6">
                      <input id="optionNo0" type="number" class="validate optionno" min="2" required>
                      <label for="optionNo0">Number of options</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="marks0" type="number" class="validate marks" min="1" name="questions[0][marks]" required>
                       <label for="marks0">Marks for this question</label>
                    </div>
                  </div>
                  <label>Options:</label>
                  <div class="col s12 options">
                    <div class="input-field col s6">
                      <input id="o1" type="text" class="validate" name="options[0][0]" required>
                       <label for="o1">1</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="o2" type="text" class="validate" name="options[0][1]" required>
                       <label for="o2">2</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="o3" type="text" class="validate" name="options[0][2]" required>
                      <label for="o3">3</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="o4" type="text" class="validate" name="options[0][3]" required>
                       <label for="o4">4</label>
                    </div>
                  </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="c0" type="number" class="validate" name="questions[0][ans]" min="1" required>
                     <label for="c0">Correct Option Number</label>
                  </div>
                </div>
                </div>
                <div class="col-md-2 d-flex justify-content-around align-items-center">
                    <button class="plus" id="plus0">+</button>
                </div>
              </div>
            </div>
          </div>
          <div class="row d-flex justify-content-center">
            <button>Submit</button>
          </div>
        </form>
    </div>
  </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/scripts/examnew.js"></script>

