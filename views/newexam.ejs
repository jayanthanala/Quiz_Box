<%- include("./partials/teheader.ejs") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
 </head>
<body>
<div class="continer-fluid">
  <div class="row">
    <div class="col-md-2 fixed">
    <div class="sticky-top">
      <h4>Total number of questions: <span id="qno">0</span></h4>
      <h4>Total number of marks: <span id="marks">0</span></h4>
    </div>
    </div>
    <div class="col-md-10" class="main">
        <form class="" action="index.html" method="post">
          <div id=cf>
            <div class="container">
              <div class="row">
                <div class="col m10">
                  <div class="row">
                    <div class="input-field col s12">
                      <input id="q0" type="text" class="validate" name="questions[0][q]">
                       <label for="q0">Question</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s6">
                      <input id="optionNo0" type="number" class="validate" min="1">
                      <label for="optionNo0">Number of options</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="marks0" type="number" class="validate" min="1" name="question[0][marks]">
                       <label for="marks0">Marks for this question</label>
                    </div>
                  </div>
                  <label>Options:</label>
                  <div class="row options">
                    <div class="input-field col s6">
                      <input id="o1" type="text" class="validate" name="questions[0][options[1]]">
                       <label for="o1">1</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="o2" type="text" class="validate" name="questions[0][options[2]]">
                       <label for="o2">2</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="o3" type="text" class="validate" name="questions[0][options[3]]">
                      <label for="o3">3</label>
                    </div>
                    <div class="input-field col s6">
                      <input id="o4" type="text" class="validate" name="questions[0][options[4]]">
                       <label for="o4">4</label>
                    </div>
                  </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="c0" type="number" class="validate" name="questions[0][ans]" min="1">
                     <label for="c0">Correct Option Number</label>
                  </div>
                </div>
                </div>
                <div class="col-md-2 d-flex justify-content-around align-items-center">
                    <button class="plus" id="plus0">+</button>
                    <button class="minus" id="minus0">-</button>
                </div>
              </div>
            </div>
          </div>
          <div class="row d-flex justify-content-center">
            <button>Submit</button>
          </div>
        </form>
    </div>
  </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/scripts/examnew.js"></script>

