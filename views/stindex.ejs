<%- include("./partials/stheader.ejs") %>
</head>
<body>
  <%- include("./partials/stnav.ejs") %>
  <main role="main">
    <div class="jumbotron">
      <div class="container">
        <h3 class="display-3">Hello, <%=req.name%>!</h3>
        <p>Hope you do well today :)</p>
      </div>
    </div>
    <div class="container">
      <%if(exams[0]){%>
        <h4 class="text-center">Active Exams</h4>
      <div class="row">
            <% for(var i=0;i<=exams.length-1;i++){%>
            <% if(exams[i].status=="started" || exams[i].status=="ready"){ %>
        <div class="col-md-4">
          <h3><%=exams[i].title%></h3>
          <p> Number of questions: <%=exams[i].noquestions%></p>
          <p>Total marks: <%=exams[i].marks%></p>
          <%if(exams[i].status=="started"){%>
            <a href="/st/exam/<%=exams[i]._id%>" class="btn btn-outline-primary">Start Exam</a>
        <%  }else{%>
              <a href="/st/exam/<%=exams[i]._id%>" class="btn btn-outline-primary">Scheduled</a>
          <%}%>
        </div>
        <%}%>
      <%}%>
      </div>
      <%}else{%>
        <div class="container px-5">
          <center>
            <h5 style="padding:30px;border:1px solid black;margin:30px">No Active Exams</h5>
            <a href="/st/exam/completed" class="btn btn-warning">Recent Exams</a>
            </center>
          </div>
    <%  }%>
      <hr>
    </div>
  </main>
  <%- include("./partials/footer.ejs") %>
